{
    "manifest_version": 2,
    "name": "Tumblr Container",
    "version": "1.0.0",

    "description": "This is an unofficial fork off v1shwa's Contain Twitter, which was a fork off Mozilla's Facebook Container, but for Tumblr instead",

    "icons": {
        "48": "icon.png",
        "96": "icon@2x.png"
    },

    "applications": {
      "gecko": {
        "id": "@contain-tumblr",
        "strict_min_version": "57.0"
      }
    },

    "homepage_url": "https://github.com/tsubamenarumi/contain-tumblr",

    "permissions": [
        "<all_urls>",
        "contextualIdentities",
        "cookies",
        "management",
        "tabs",
        "webRequestBlocking",
        "webRequest"
    ],

    "background": {
        "scripts": ["background.js"]
    }
}
